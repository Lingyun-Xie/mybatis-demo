<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
    <resultMap id="user" type="com.example.demo.model.User">
        <id column="id"/>
        <result column="username" property="userName"/>
        <result column="age" property="age"/>
    </resultMap>

    <select id="queryAllUsers" resultType="com.example.demo.model.User">
        select * from t_user;
    </select>

    <select id="queryUserById" parameterType="Integer" resultType="com.example.demo.model.User">
        select * from t_user where id = #{id};
    </select>

    <insert id="saveUser" parameterType="com.example.demo.model.User">
        insert into t_user (username,age) values (#{userName},#{age})
    </insert>

    <delete id="deleteUserById" parameterType="int">
        delete from t_user where id = #{id}
    </delete>

</mapper>